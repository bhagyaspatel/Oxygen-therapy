<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp"
    android:background="@color/white"
    tools:context=".adminSideFragments.PretherapyFormDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/patientListLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pretherapy_form"
            android:textSize="@dimen/_26sdp"
            android:fontFamily="@font/arbutus"
            android:gravity="center_horizontal"
            android:textColor="@color/dark_app_green"
            android:textStyle="bold"/>

        <View
            android:layout_width="180dp"
            android:layout_height="4dp"
            app:layout_constraintTop_toBottomOf="@+id/patientListLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/darker_app_green"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/reason_for_oxygen_therapy"
                android:textColor="@color/text_black"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/rsn"
                android:backgroundTint="@color/darker_app_green"
                android:layout_width="match_parent"
                android:singleLine="false"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/oxygen_prescription"
                android:textColor="@color/text_black"/>

            <RadioGroup
                android:id="@+id/radioGroupOxygenPres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/presYes"
                    android:checked="true"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:text="Yes" />
                <RadioButton
                    android:id="@+id/presNo"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:text="No" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/comorbidities"
                android:textColor="@color/text_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/dm"
                        android:textColor="@color/black"
                        android:text="DM"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:spinnerMode="dropdown"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/htn"
                        android:textColor="@color/black"
                        android:text="HTN"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        tools:colorAccent="@color/lighter_app_green"
                        android:spinnerMode="dropdown"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/copd"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="COPD"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:spinnerMode="dropdown"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/asthama"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="BRONCHIAL ASTHAMA"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:spinnerMode="dropdown"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/ihd"
                        android:text="IHD"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:spinnerMode="dropdown"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:id="@+id/others"
                        android:text="OTHERS"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:spinnerMode="dropdown"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/risk_of_type_2_failure"
                android:textColor="@color/text_black"/>

            <RadioGroup
                android:id="@+id/radioGroupRisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/riskYes"
                    android:checked="true"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:text="Yes" />
                <RadioButton
                    android:id="@+id/riskNo"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:text="No" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/target_saturation"
                android:textColor="@color/text_black"/>

            <RadioGroup
                android:id="@+id/radioGroupSaturation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/saturationLow"
                    android:checked="true"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:text="88-92 %" />
                <RadioButton
                    android:id="@+id/saturationHigh"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:text="94-98 %" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/baseline_parameters"
                android:textColor="@color/text_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="HR-"
                            android:textColor="@color/text_black"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/hr"
                            android:textColor="@color/black"
                            android:inputType="numberDecimal"
                            android:layout_width="@dimen/_60sdp"
                            android:backgroundTint="@color/darker_app_green"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="BP-"
                            android:textColor="@color/text_black"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/bp"
                            android:textColor="@color/black"
                            android:inputType="numberDecimal"
                            android:backgroundTint="@color/darker_app_green"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="SPO2-"
                            android:textColor="@color/text_black"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/spo2"
                            android:textColor="@color/black"
                            android:inputType="numberDecimal"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:backgroundTint="@color/darker_app_green"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="RR-"
                            android:textColor="@color/text_black"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/rr"
                            android:textColor="@color/black"
                            android:inputType="numberDecimal"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:backgroundTint="@color/darker_app_green"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/abg"
                android:textColor="@color/text_black"/>

            <LinearLayout
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="PH-"
                            android:textColor="@color/text_black"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/ph"
                            android:textColor="@color/black"
                            android:inputType="numberDecimal"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:backgroundTint="@color/darker_app_green"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="PCO2-"
                            android:textColor="@color/text_black"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/pco2"
                            android:textColor="@color/black"
                            android:inputType="numberDecimal"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:backgroundTint="@color/darker_app_green"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="PO2-"
                            android:textColor="@color/text_black"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/po2"
                            android:inputType="numberDecimal"
                            android:layout_width="@dimen/_60sdp"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:backgroundTint="@color/darker_app_green"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:text="HCO3-"
                            android:textColor="@color/text_black"/>

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/hco3"
                            android:layout_width="@dimen/_60sdp"
                            android:textColor="@color/black"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darker_app_green"
                            android:inputType="numberDecimal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="LACTATE-"
                        android:textColor="@color/text_black"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/lactate"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/darker_app_green"
                        android:hint="If Available"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="@string/delivery_system_recomended"
                android:textColor="@color/text_black"/>

            <RadioGroup
                android:id="@+id/radioGroupDeliverySystem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/deliveryYes"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:text="Yes" />
                <RadioButton
                    android:id="@+id/deliveryNo"
                    android:checked="true"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="25dp"
                    android:textColor="@color/black"
                    android:text="No" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deliverySystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/deliverySystemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_system_used"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_12sdp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_deliverySystem"
                android:backgroundTint="@color/darker_app_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_5sdp"
                android:singleLine="false"/>
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/savePatientBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/lighter_app_green"
            android:layout_gravity="center"
            android:text="@string/save"
            android:outlineAmbientShadowColor="@color/darker_app_green"
            android:textColor="@color/darker_app_green"
            android:layout_marginTop="@dimen/_20sdp" />
    </LinearLayout>


</ScrollView>